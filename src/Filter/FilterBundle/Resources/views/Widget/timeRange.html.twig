<span class="span4 form-label {{ active ? 'active' : '' }}">
    <i class="icon icon-calendar"></i> {{ label | trans }}
</span>

<div class="span8 no-left-margin range-container">
    <div class="span6 no-left-margin">
        <input placeholder="{{ 'timerange start' | trans }}" type="text" value="{{ value ? value.from : '' }}" name="{{ name }}[from]" class="widget-time-range m-wrap span12">
    </div>
    <div class="span6">
        <input placeholder="{{ 'timerange end' | trans }}" type="text" value="{{ value ? value.to : '' }}" name="{{ name }}[to]" class="widget-time-range m-wrap right span12">
    </div>
</div>
